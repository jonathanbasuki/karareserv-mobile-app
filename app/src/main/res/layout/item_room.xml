<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardElevation="8dp"
    app:cardCornerRadius="12dp"
    android:backgroundTint="@color/surface"
    android:clipToPadding="false">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Card Image -->
        <ImageView
            android:id="@+id/imageRoom"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:scaleType="centerCrop"
            android:src="@drawable/logo_slash"
            android:background="@drawable/image_card_background"
            android:clipToOutline="true" />

        <!-- Card Title -->
        <TextView
            android:id="@+id/textRoomType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="VIP Room"
            style="@style/TextCardTitle"
            android:textColor="@color/onPrimaryContainer" />

        <!-- Capacity Icon and Info-->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/iconInfo"
                android:layout_width="48dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_groups"
                app:tint="@color/secondaryIcon" />

            <TextView
                android:id="@+id/textCapacity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="2dp"
                android:text="8 people"
                style="@style/TextBody"
                android:textColor="@color/secondaryIcon" />
        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>
